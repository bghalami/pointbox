<!DOCTYPE html>
<html>
  <head>
    <title>Pointbox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Logged in as #{current_user.username}" %> | <%= "#{current_user.points}pts" %> | <%= link_to 'Home', root_path %> | <%= link_to "Reward Shop", rewards_path %> | <%= link_to "Test Your Might", gamblers_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', login_path %>
    <% end %>
    <hr>
    <% if notice %>
      <%= notice %>
	  <% end %>

	  <% if alert %>
      <%= alert %>
	  <% end %>

    <%= yield %>
  </body>
</html>
