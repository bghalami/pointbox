<!DOCTYPE html>
<html>
  <head>
    <title>Pointbox</title>
    <link href="https://fonts.googleapis.com/css?family=Chango|Varela+Round" rel="stylesheet">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <div class='navbarr'>
        <%= "Logged in as #{current_user.username}" %> | <%= "#{current_user.points}pts" %> | <%= link_to 'Home', root_path, :class=>"link-class" %> | <%= link_to "Reward Shop", rewards_path, :class=>"link-class"  %> | <%= link_to "Test Your Might", gamblers_path, :class=>"link-class" %> | <%= link_to 'Log Out', logout_path, method: :delete, :class=>"link-class" %>
      </div>
    <% else %>
      <!-- not logged in -->
      <div class='navbarr'>
        <%= link_to 'Home', root_path, { :class=>"link-class" } %> | <%= link_to 'Log In', login_path, { :class=>"link-class" } %>
      </div>
    <% end %>
    <hr>
    <% if notice %>
      <%= notice %>
	  <% end %>

	  <% if alert %>
      <%= alert %>
	  <% end %>

    <%= yield %>
  </body>
</html>
