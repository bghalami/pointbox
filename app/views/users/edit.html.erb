<h1>Edit <%= @user.name %></h1>

<%= form_for @user, url: user_profile_path(@user), html: { method: :put } do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :points %>
    <%= f.text_field :points %>
  </div>
  <div>
    <%= f.label :redeemed_points %>
    <%= f.text_field :redeemed_points %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :role %>
    <%= f.text_field :role  %>
  </div>
  <div>
    <%= f.submit "Submit Changes" %>
  </div>
<% end %>
